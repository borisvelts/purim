    <h3 class="text-center my-md-4 my-3">חיות המחמד בעיר ראשון לציון
    </h3>

    <div class="pictures_row mb-5">
        <div class="pictures_column">
            <% for(let f of animals[0] || []){ %>
                <!-- <img src="<%#f.picture.secure_url%>" alt=""> -->
                <div class="card m-1">
                    <img src="<%=f.picture.secure_url%>" class="card-img-top1" alt="Costume" onclick="openImage(this)">
                    <div class="card-body">
                        <div class="container">
                            <div class="row justify-content-between align-items-center">
                                <div class="col-auto">
                                    <p class="mb-0">
                                        <%=f.animalName + ', ' + f.neighborhood.name%>
                                    </p>
                                </div>
                                <div class="col-auto">
                                    <p class="mb-0" style="font-size: 1.2rem;">
                                        <span class="liked">
                                            <%=f.likes%>
                                        </span> <i class="bi bi-heart-fill ms-2" onclick="likeImage(this)"
                                            data-id="<%=f._id%>"
                                            style="color: lightpink;cursor: pointer;font-size: 1.4rem;"></i>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <%}%>

        </div>
