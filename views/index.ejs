    <div class="modal fade" id="uploadModal">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-body">
                    <form action="/upload" method="POST">
                        <div class="container">
                            <div class="row">
                                <h3 class="text-center">העלאת תמונה</h3>
                                <p class="text-center">ברוכים הבאים לתחרות פורים של ראשון לציון</p>
                            </div>
                            <div class="row">
                                <div class="col-3">
                                    <div class="mb-3">
                                        <label for="exampleFormControlInput1" class="form-label">שם פרטי</label>
                                        <input type="text" class="form-control" name="firstName" placeholder="שם פרטי">
                                    </div>
                                </div>
                                <div class="col-3">
                                    <div class="mb-3">
                                        <label for="exampleFormControlInput1" class="form-label">שם משפחה</label>
                                        <input type="text" class="form-control" name="lastName" placeholder="שם משפחה">
                                    </div>
                                </div>
                                <div class="col-3">
                                    <div class="mb-3">
                                        <label for="exampleFormControlInput1" class="form-label">באיזה כיתם אתם?</label>
                                        <select class="form-select" name="grade">
                                            <option value="א">א</option>
                                            <option value="ב">ב</option>
                                            <option value="ג">ג</option>
                                            <option value="ד">ד</option>
                                            <option value="ה">ה</option>
                                            <option value="ו">ו</option>
                                            <option value="ז">ז</option>
                                            <option value="ח">ח</option>
                                            <option value="ט">ט</option>
                                            <option value="י">י</option>
                                            <option value='י"א'>י"א</option>
                                            <option value='י"ב'>י"ב</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-3">
                                    <div class="mb-3">
                                        <label for="exampleFormControlInput1" class="form-label">בני כמה אתם</label>
                                        <input type="text" class="form-control" name="age" placeholder="בני כמה אתם?">
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="mb-3">
                                        <label for="exampleFormControlInput1" class="form-label">מאיזה בית ספר
                                            אתם?</label>
                                        <select class="form-select" name="school">
                                            <% for(let school of schools){ %>
                                                <option value="<%=school.name%>">
                                                    <%=school.name%>
                                                </option>
                                                <% } %>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-8">
                                    <div class="mb-3">
                                        <label for="formFile" class="form-label">בחרו תמונה</label>
                                        <input class="form-control" name="image" type="file" id="formFile">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <button class="btn btn-success" type="submit">העלה נתונים</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
