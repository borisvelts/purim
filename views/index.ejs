    <section id="participants" class="py-4">
        <h3>בתי הספר המשתתפים</h3>
        <div class="row d-flex justify-content-around">
            <% for(var i=0;i<10;i++){ %>
                <div class="col-2 my-3 card d-flex align-items-center justify-content-center">
                    <h5>אביבים</h5>
                    <p>20 משתתפים</p>
                </div>
                <%}%>
        </div>
