                    <%- include('footer')%>



                        <div class="modal fade" id="uploadModal">
                            <div class="modal-dialog modal-md">
                                <div class="modal-content">
                                    <div class="modal-body">
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            style="position: absolute;top: 10px;left: 10px;"
                                            aria-label="Close"></button>
                                        <form action="/upload" method="POST" enctype="multipart/form-data">
                                            <div class="container">
                                                <div class="row">
                                                    <h3 class="text-center">העלאת תמונה</h3>
                                                    <p class="text-center">ברוכים הבאים לתחרות החיות של ראשון לציון</p>
                                                </div>
                                                <div class="row">
                                                    <div class="col-6">
                                                        <div class="mb-3">
                                                            <label for="exampleFormControlInput1" class="form-label">*שם
                                                                החיה</label>
                                                            <input type="text" class="form-control" name="animalName"
                                                                placeholder="שם החיה">
                                                        </div>
                                                    </div>
                                                    <div class="col-6">
                                                        <div class="mb-3">
                                                            <label for="exampleFormControlInput1"
                                                                class="form-label">*סוג
                                                                החיה</label>
                                                            <input type="text" class="form-control" name="animalType"
                                                                placeholder="סוג החיה">
                                                        </div>
                                                    </div>
                                                    <div class="col-6">
                                                        <div class="mb-3">
                                                            <label for="exampleFormControlInput1" class="form-label">*שם
                                                                פרטי</label>
                                                            <input type="text" class="form-control" name="firstName"
                                                                placeholder="שם פרטי">
                                                        </div>
                                                    </div>
                                                    <div class="col-6">
                                                        <div class="mb-3">
                                                            <label for="exampleFormControlInput1" class="form-label">*שם
                                                                משפחה</label>
                                                            <input type="text" class="form-control" name="lastName"
                                                                placeholder="שם משפחה">
                                                        </div>
                                                    </div>
                                                    <div class="col-6">
                                                        <div class="mb-3">
                                                            <label for="exampleFormControlInput1"
                                                                class="form-label">טלפון</label>
                                                            <input type="tel" class="form-control" name="cellphone"
                                                                placeholder="">
                                                        </div>
                                                    </div>
                                                    <div class="col-6">
                                                        <div class="mb-3">
                                                            <label for="exampleFormControlInput1"
                                                                class="form-label">שכונה</label>
                                                            <!-- <input type="text" class="form-control" name="address"
                                                                placeholder="כתובת"> -->
                                                            <select class="form-select" name="neighborhood"
                                                                aria-label="Default select example">
                                                                <%for(let i of neighborhoods){%>
                                                                    <option value="<%=i.name%>">
                                                                        <%=i.name%>
                                                                    </option>
                                                                    <%}%>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="col-12">
                                                        <div class="mb-3">
                                                            <label for="formFile" class="form-label">*בחרו תמונה</label>
                                                            <input class="form-control" name="image" type="file"
                                                                id="formFile">
                                                            <div id="emailHelp" class="form-text">
                                                                אנו אוהבים ומכבדים בעלי חיים. בבקשה העלו תמונות המכבדות
                                                                אותם. תמונות עם תוכן פוגעני לא יעלו לאתר.
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-12 mb-3">
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="checkbox"
                                                                name="approveJoin" id="flexCheckDefault">
                                                            <label class="form-check-label" for="flexCheckDefault">
                                                                מעוניינ.ת להצטרף לפעילות עירונית לחברים על 4
                                                            </label>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row justify-content-between ">
                                                    <div class="col-auto">
                                                        <p class="mb-0">* שדות חובה</p>
                                                    </div>
                                                    <div class="col-auto">
                                                        <button class="btn btn-success" type="submit">העלאה</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

